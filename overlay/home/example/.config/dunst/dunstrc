    frame_width = 3
    frame_color = "#aaaaaa"
    separator_color = frame
    sort = no
    idle_threshold = 0

    ### Text ###

    font = Monospace 12
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###

    icon_position = left
    min_icon_size = 0
    max_icon_size = 32
